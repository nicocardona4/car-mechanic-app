const express = require('express');

const {
    createService,
    getServices,
    getServiceById,
    updateService
} = require('../controllers/services_controller');

const router = express.Router();

router.post("/v1/services", createService);
router.get("/v1/services", getServices);
router.get("/v1/services/:id", getServiceById);
router.put("/v1/services/:id", updateService);
// router.delete("/v1/services/:id", deleteService);

module.exports = router;